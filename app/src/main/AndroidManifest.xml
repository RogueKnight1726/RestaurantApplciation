<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eiv.rohueknight1726.com.restaurantprototype">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".homeActivity"
            android:theme="@style/homeTheme"></activity>
        <activity
            android:name=".menuActivity"
            android:theme="@style/menuTheme" />
        <activity
            android:name=".itemDescriptionActivity"
            android:theme="@style/menuTheme">
        </activity>
        <activity
            android:name=".firstActivity"
            android:theme="@style/homeTheme" />
        <activity
            android:name=".loginActivity"
            android:theme="@style/loginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".landingPage"
            android:theme="@style/loginTheme" />
        <activity android:name=".testActivity" />
        <activity android:name=".menuExpansion"></activity>
        <activity android:name=".pendingMenuActivity"
            android:theme="@style/homeTheme"></activity>
    </application>

</manifest>