<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eiv.rohueknight1726.com.restaurantprototype.pendingMenuActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:transitionName="mToolbarTransition"
        android:background="#121212">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_view_compact_white_24dp"
            android:onClick="drawerToggle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Your Cart"
            android:textSize="21sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:layout_marginLeft="38dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="#FF6664"
                    android:foregroundGravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Table A"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"

                        android:layout_margin="12dp" />

                </android.support.v7.widget.CardView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:id="@+id/checkButton"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="ConfirmOrder" />
            </LinearLayout>
        </FrameLayout>

    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="currentOrderFrameTransition"
        android:background="#44AA00"
        android:layout_marginTop="?actionBarSize">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World"
    android:textSize="20sp"
    android:layout_margin="16dp"
    android:transitionName="HelloTextTransition"/>
        </FrameLayout>
</FrameLayout>
