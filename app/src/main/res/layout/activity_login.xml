<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundImage"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:alpha="0"
        android:id="@+id/grayBackgroundCover">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:id="@+id/backgroundFrame">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_one"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_two"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_three"
            android:id="@+id/imageView" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#232323"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="28dp"
        android:onClick="AnimateLayout"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/bottomFrame"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="250dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/loginLinearLayout"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:orientation="vertical">
        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:maxLines="1"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:maxLines="1"

            />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_remove_black_24dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="-60dp"
        android:onClick="AnimateRevers"
        android:id="@+id/closeButton"
        android:layout_marginRight="8dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#1DE9B6"
        android:id="@+id/loginCard"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="loginToUser"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginTop="160dp"></android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="SIGN UP"
        android:id="@+id/signUpText"
        android:layout_marginBottom="60dp"
        android:visibility="gone"/>
</FrameLayout>
