<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E0DE"
        android:layout_gravity="bottom"></FrameLayout>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/featuredImg"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="156dp"
        android:layout_marginBottom="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Hello World"
        android:id="@+id/featuredName"
        android:fontFamily="sans-serif-black"
        android:textColor="#232323"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some sub text for the item. Possibly a minor ingredient description which could help the guests customise to their their taste"
            android:fontFamily="sans-serif-thin"
            android:maxLines="3"
            android:textSize="12sp"
            android:id="@+id/featuredItemDescription"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$1.99"
            android:textSize="21sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingRight="16dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/negativeButtonCell"
                android:src="@mipmap/ic_remove_black_24dp"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/featuredItemCount"
                android:text="1"
                android:visibility="invisible"
                android:textSize="36sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:cardBackgroundColor="#FF6664"
                android:id="@+id/addButtonCard"
                app:cardCornerRadius="23dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        </LinearLayout>
</FrameLayout>